{
    "files.associations":
    {
        "*.json": "jsonc",
        // "namespaces/**/*.json": "json5"
    },

    "[jsonc]":
    {
        "editor.wordWrap": "on"
    },

    "terminal.integrated.cwd": "${workspaceFolder}",


    "terminal.integrated.env.windows":
    {
        "PATH": "${workspaceFolder}/binaries;${env:PATH}"
    },

    "json.schemas":
    [
        {
            "fileMatch": [ "namespaces/**/*.json" ],
            "url": "./schemas/data.schema.json"
        },
        {
            "fileMatch": [ "exports/*.json" ],
            "url": "./schemas/export.schema.json"
        }
    ]
}